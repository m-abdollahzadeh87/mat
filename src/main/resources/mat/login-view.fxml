<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane alignment="CENTER"
          xmlns:fx="http://javafx.com/fxml"
          hgap="10" vgap="10"
          fx:controller="mat.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <Label fx:id="messageLBL"
               alignment="CENTER"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"
               GridPane.columnSpan="2"
        text="User boss or assistant"/>

        <Label text="Username : " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="usernameTF" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Password : " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="passwordPF" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Button text="Login"
                alignment="CENTER"
                onAction="#onLoginClick"
                GridPane.columnIndex="0"
                GridPane.rowIndex="3"
                GridPane.columnSpan="2"/>

    </children>
</GridPane>
